(rule
 (targets basic.ml)
 (deps
  (:plugin ../src/plugin/ocaml_protoc_plugin.exe)
  (:proto basic.proto))
 (action
  (run protoc -I . --plugin=protoc-gen-ocaml=%{plugin} --ocaml_out . %{proto})))

