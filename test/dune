(library
 (name test)
 (libraries base protobuf)
 (inline_tests)
 (preprocess
  (pps ppx_expect ppx_deriving.show ppx_deriving.eq)))

(rule
 (targets basic.ml)
 (deps
  (:plugin ../src/plugin/ocaml_protoc_plugin.exe)
  (:proto basic.proto))
 (action
  (run protoc -I .
       "--plugin=protoc-gen-ocaml=%{plugin}"
       "--ocaml_out=annot=[@@deriving show { with_path = false }, eq]:." %{proto})))

